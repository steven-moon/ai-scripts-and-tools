{
  "name": "ai-scripts-and-tools",
  "version": "1.0.0",
  "description": "A collection of TypeScript-based scripts and tools for AI-related tasks",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "lint": "tsc --noEmit",
    "test": "echo \"Error: no test specified\" && exit 1",
    "clean": "rm -rf dist node_modules/.cache",
    "commit": "ts-node src/scripts/generate-git-commit.ts",
    "summary": "ts-node src/scripts/generate-code-summary.ts",
    "summarize": "ts-node src/scripts/summarize-folder.ts",
    "test-llm": "ts-node tests/scripts/test-llm-providers.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steven-moon/ai-scripts-and-tools.git"
  },
  "keywords": [
    "ai",
    "tools",
    "scripts",
    "typescript"
  ],
  "author": "Steven Moon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/steven-moon/ai-scripts-and-tools/issues"
  },
  "homepage": "https://github.com/steven-moon/ai-scripts-and-tools#readme",
  "devDependencies": {
    "@types/node": "^20.x.x",
    "ts-node": "^10.x.x",
    "typescript": "^5.x.x"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "axios": "^1.6.7",
    "dotenv": "^16.4.7",
    "fast-glob": "^3.3.3",
    "fs-extra": "^11.3.0",
    "ignore": "^7.0.3"
  }
}
